<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net472;net6.0</TargetFrameworks>
		<LangVersion>latest</LangVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>disable</Nullable>
		<DevelopmentDependency>true</DevelopmentDependency>
		<SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<ContentTargetFolders>build</ContentTargetFolders>
		<Authors>Truinto</Authors>
		<Title>Version Control</Title>
		<Description>MSBuild Task to automate assembly versioning</Description>
		<PackageProjectUrl>https://github.com/Truinto/BuildTaskVersionControl</PackageProjectUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<AssemblyVersion>1.0.2</AssemblyVersion>
		<FileVersion>1.0.2</FileVersion>
		<Version>1.0.2</Version>
		<Configurations>Debug;Release;Release Net6</Configurations>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Release Net6'">
		<TargetFramework>net6.0</TargetFramework>
		<Optimize>True</Optimize>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Build.Framework" Version="17.3.1" Pack="false" />
		<PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.3.1" Pack="false" />
		<Reference Include="System.Net.Http" Version="4.3.4" ExcludeAssets="All" Condition="'$(TargetFramework)'=='net472'" Pack="false" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="Test\**" />
		<EmbeddedResource Remove="Test\**" />
		<None Remove="Test\**" />
		<None Remove=".gitattributes" />
		<None Remove=".gitignore" />
		<None Remove="BuildTaskVersionControl.1.0.0.nupkg" />
		<None Remove="BuildTaskVersionControl.nuspec" />
		<None Remove="BuildTaskVersionControl.props" />
		<None Remove="LICENSE" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="BuildTaskVersionControl.props" />
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
